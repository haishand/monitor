<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.domain.Device">
    <resultMap id="result" type="domain.Device">
        <result property="id" column="device_id" />
        <result property="status" column="status"/>
        <result property="hum" column="hum"/>
        <result property="tem" column="tem"/>
    </resultMap>
    <select id="selectAll" resultMap="result">
        select * from device;
    </select>
    <insert id="addOne" parameterType="domain.Device">
        insert into device(device_id, status, hum, tem) values(#{id}, #{status}, #{hum}, #{tem})
    </insert>
</mapper>